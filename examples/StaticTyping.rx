# vim: set ft=rb:

class @
  def @array : Array@[String]
  def @message : String

  ###
  To define return type, we can add : <YourType>
  after method definition
  ###
  def @main() : Void
    trace(message = toLowerCase("Hello World"))
  end

  ###
  Also, to define param or variable type,
  simply add : <YourType> after it's name
  ###
  def @toLowerCase(message : String) : String
    message.toLowerCase()
  end
end
